{# templates/results.html #}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Results</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css">
</head>

<body>
  <h1 class="title">{{ test_name }} Results</h1>
  <section class="section>
    <div class="container">
        <image src="confusion_matrix.png" />
    </div>
  </section>
  <section class="section">
        <div class="container">
            <h2 class="subtitle">Clusters</h2>
            {% for row in clusters|batch(2) %}
            <div class="columns">
                {% for c in row %}
                <div class="column">
                    <p class="notification is-info">
                        {{ c.name }} ({{ c.n }})
                        <br/>
                        Confidence {{ (c.frac * 100) | int }}%
                    </p>
                    <image src="wordcloud-{{ c.name }}.png" />
                </div>
                {% endfor %}
            </div>
            {% endfor %}
        </div>
    </section>
    <section class="section>
    <div class="container">
        <h2 class="subtitle">Model Structure</h2>
        <image src="model.png" />
    </div>
  </section>
</body>
</html>
